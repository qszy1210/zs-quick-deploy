{
  "manifest_version": 3,
  "name": "Jenkins Build Trigger",
  "version": "1.1",
  "description": "一键触发Jenkins构建",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "commands": {
    "_execute_action": {
      "description": "激活插件"
    },
    "trigger-build": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      },
      "description": "触发Jenkins构建"
    }
  }
}